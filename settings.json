{
    "workbench.colorTheme": "Clouds",
    "workbench.iconTheme": "material-icon-theme", // Иконки эксплорера
    
    "editor.codeLensFontFamily": "con",
    "editor.fontFamily": "Consolas",
    
    "editor.links": false,  // Отключает подчёркивание ссылок (нужно лучшее решение, которое просто выключает подчёркивание,
                            //  но не выключает переход по этим ссылкам) 
  
    // Отключает подсветку юникод символов в т.ч. русских букв
    "editor.unicodeHighlight.invisibleCharacters": false,
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "editor.unicodeHighlight.nonBasicASCII": false,

    

    "editor.minimap.enabled": false, // отключает мини карту справа
    "editor.matchBrackets": "always",  // отключает выделение скобок (трубует лучшего решения, так что бы скопки выделялить, 
                                    //  когда курсор возле скобки, и не выделялись, когда курсор где то между скобками)
    
    "editor.insertSpaces": false, // отключает вставку пробелов вместро таба


    "editor.occurrencesHighlight": false, // отключает обведение слова в рамку при постановке в него курсора

  
  // Сомнительно, возможно скоро удалю (по идее должен раскрашивать вертикальные линии-направляющие отступов - в более светлый цвет, но хз
  //    можно найти лучшее решение)
    "editor.guides.bracketPairs" : true,
    "editor.guides.highlightActiveIndentation" : false,
    "editor.guides.bracketPairsHorizontal" : "active",
    
    "workbench.colorCustomizations": {
        "[Clouds]": {
          "editorBracketPairGuide.background1": "#e9e9e9",
          "editorBracketPairGuide.background2": "#e9e9e9",
          "editorBracketPairGuide.background3": "#e9e9e9",
          "editorBracketPairGuide.background4": "#e9e9e9",
          "editorBracketPairGuide.background5": "#e9e9e9",
          "editorBracketPairGuide.background6": "#e9e9e9",
          "editorBracketPairGuide.activeBackground1": "#e9e9e9",
          "editorBracketPairGuide.activeBackground2": "#e9e9e9",
          "editorBracketPairGuide.activeBackground3": "#e9e9e9",
          "editorBracketPairGuide.activeBackground4": "#e9e9e9",
          "editorBracketPairGuide.activeBackground5": "#e9e9e9",
          "editorBracketPairGuide.activeBackground6": "#e9e9e9",
    },
        
    // не помню
    "editor.wordSeparators": "`~!@#%^&*()-=+[{]}\\|;:'\",.<>/?",
}
